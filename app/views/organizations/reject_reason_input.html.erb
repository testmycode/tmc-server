<p>
  <strong>You are about to reject organization <%= @organization.name %></strong>
</p>

<%= form_for(@organization, url: reject_organization_url(@organization), method: :post) do |f| %>
  <%= render 'shared/error_messages', target: @organization %>

  <div class="field">
    <%= f.label :rejected_reason, 'Reason:' %><br>
    <%= f.text_area :rejected_reason %>
  </div>
  <div class="actions">
    <%= f.submit 'Reject organization', class: 'btn btn-danger' %>
  </div>
<% end %>