<h1>Assistants in course <%= @course.name %></h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Remove</th>
  </tr>
  </thead>

  <tbody>
  <% @assistants.each do |assistant| %>
      <tr>
        <td><%= link_to assistant.username, participant_path(assistant) %></td>
        <td><%= link_to 'Remove', organization_course_assistant_path(@course.organization, @course, assistant.assistantship(@course)), method: :delete, class: "btn btn-mini btn-warning", data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render 'form' %>
