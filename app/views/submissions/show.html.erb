<h1>Submission <%= @submission.id %></h1>
<%= render 'submission_details' %>

<% if @submission.pretest_error %>
  <%= render 'pretest_error' %>
<% end %>

<% if can? :update, @submission %>
  <div class="row-fluid">
    <div class="span11">
      <h2>Rerun submission</h2>
      <div class="well">
        <div>
          <%= form_tag submission_path(@submission), :method => :put do %>
            <%= hidden_field_tag('rerun', '1')  %>
            <div>
              <%= button_tag 'Rerun submission', :type => 'submit', class: "btn btn-danger" %>
            </div>
            (may add points; never deletes points)
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<ul class="nav nav-tabs" id="myTab">
  <% if @submission.feedback_answers.any? %>
    <li><a href="#feedback" >Feedback</a></li>
  <% end %>
  <% unless @submission.pretest_error %>
    <li><a href="#testResults">Test Results</a></li>
  <% end %>
  <% unless @submission.stdout.blank? %>
    <li><a href="#stdout" >System.out</a></li>
  <% end %>
  <% unless @submission.stderr.blank? %>
    <li><a href="#stderr" >System.err</a></li>
  <% end %>
  <% unless @submission.valgrind.blank? %>
    <li><a href="#valgrind" >Valgrind</a></li>
  <% end %>
  <% if can? :read_vm_log, @submission %>
    <li class=""><a href="#logs">Logs</a></li>
  <% end %>
  <li><a href="#files">Files</a></li>
</ul>

<div class="row-fluid">
  <div class="span12">
    <div class="tab-content">
      <% if @submission.feedback_answers.any? %>
        <div class="tab-pane" id="feedback">
          <%= render 'feedback_answers' %>
        </div>
      <% end %>


      <% unless @submission.pretest_error %>
        <div class="tab-pane" id="testResults">
          <%= render 'submissions/details' %>
        </div>
      <% end %>

      <% unless @submission.stdout.blank? %>
        <div class="tab-pane" id="stdout">
          <%= render 'submissions/stdout' %>
        </div>
      <% end %>

      <% unless @submission.stderr.blank? %>
        <div class="tab-pane" id="stderr">
          <%= render 'submissions/stderr' %>
        </div>
      <% end %>

      <% unless @submission.valgrind.blank? %>
        <div class="tab-pane" id="valgrind">
          <%= render 'submissions/valgrind' %>
        </div>
      <% end %>

      <% if can? :read_vm_log, @submission %>
        <div class="tab-pane" id="logs">
          <%= render 'logs' %>
        </div>
      <% end %>

      <div class="tab-pane" id="files">
        <div class="row-fluid">
          <div class="span11">
            <%= render :partial => 'files/files', :locals => {:files => @files} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){

      var hash = window.location.hash;

      if (!hash) {
        if ( $('#testResults').length ) {
          hash = 'testResults';
        } else {
          hash = 'files';
        }

        window.location.hash = hash;

      }
      hash && $('ul.nav a[href="' + hash + '"]').tab('show');
     // add a hash to the URL when the user clicks on a tab

      $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        history.pushState(null, null, $(this).attr('href'));
        window.location.hash = this.hash;
      });
      // navigate to a tab when the history changes
      window.addEventListener("popstate", function(e) {
        var activeTab = $('[href=' + location.hash + ']');
        if (activeTab.length) {
          activeTab.tab('show');
        } else {
          $('.nav-tabs a:first').tab('show');
        }
      });
    });

</script>
