<%= form_for(@certificate) do |f| %>
  <%= render 'shared/error_messages', target: @certificate %>

  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :course_id %>
  <%= bs_labeled_field("Full name", f.text_field(:name)) %>
  <div class="actions">
    <%= f.submit 'Download certificate', class: "btn btn-primary"%>
  </div>
<% end %>
