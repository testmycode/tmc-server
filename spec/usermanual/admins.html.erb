<%
  FactoryGirl.create(:admin, :login => 'admin', :password => 'admin')
  ct1 = FactoryGirl.create(:course_template)
  ct2 = FactoryGirl.create(:course_template)
  ct3 = FactoryGirl.create(:course_template)
