#!/usr/bin/screen -c
caption always
caption string "%w %=| %H %c"

defscrollback 10000
zombie qr
verbose on

screen rails s
title "rails server"

screen bundle exec script/background_daemon run
title "background"

screen bundle exec rake dev:comet:run
title "comet"

screen ext/tmc-spyware-server/dev.rb
title "spyware"

screen ./rubysudo ext/tmc-sandbox/web/webapp.rb run
title "sandbox"

